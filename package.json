{
  "name": "new-api-workers",
  "version": "1.0.0",
  "description": "LLM API Gateway on Cloudflare Workers with D1 Database",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "db:create": "wrangler d1 create new-api-db",
    "db:migrate:local": "wrangler d1 migrations apply new-api-db --local",
    "db:migrate:remote": "wrangler d1 migrations apply new-api-db --remote",
    "db:seed:local": "wrangler d1 execute new-api-db --local --file=./migrations/seed.sql",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "hono": "^4.6.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241127.0",
    "typescript": "^5.6.0",
    "wrangler": "^3.91.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
